%h2 #{t('activerecord.model.user')}の編集

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-inputs
    = f.input :email, as: :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      次のメールアドレスの確認を待っています: #{resource.unconfirmed_email}
  .form-inputs
    = f.input :nick_name
  .form-inputs
    = image_tag current_user.avatar_url(:preview), class: 'rounded img-thumbnail' if current_user.avatar.present?

    = f.input :avatar, as: :file
  .form-inputs
    = f.input :password, as: :password, autocomplete: "new-password", hint: "(変更しない場合は空白のままにします)"
  .form-inputs
    = f.input :password_confirmation, as: :password, autocomplete: "new-password"
  .form-inputs
    = f.input :current_password, as: :password, autocomplete: "current-password"
  .form-actions
    = f.submit "更新する", class: 'btn btn-primary'
